@model BookStore.Models.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .card-title {
        display: block;
    }
</style>
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="Books" asp-action="Index">List of Books</a>
            <span class="breadcrumb-item active">Delete</span>
        </nav>
    </div>
</div>

<div class="card-body">
    <h4 class="card-title" style="white-space: nowrap; display: inline-block;">Book information : @Html.Raw(Model.Name)</h4>

    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td class="text-dark font-weight-semibold">@Model.Id</td>
                </tr>
                <tr>
                    <td>CatID:</td>
                    <td class="text-dark font-weight-semibold">@Model.CategoryId</td>
                </tr>
                <tr>
                    <td>AuthorID:</td>
                    <td class="text-dark font-weight-semibold">@Model.AuthorId</td>
                </tr>
                <tr>
                    <td>Title:</td>
                    <td>@Html.Raw(Model.Title)</td>
                </tr>
                <tr>
                    <td>Name:</td>
                    <td>@Html.Raw(Model.Name)</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <td>Price</td>
                    <td>@string.Format("{0:#,##0} đ", Model.Price)</td>
                </tr>
                <tr>
                    <td>NameAuthor</td>
                    <td>@Model.NameAuthor</td>
                </tr>
                <tr>
                    <td>Publisher</td>
                    <td>@Model.Publisher</td>
                </tr>
                <tr>
                    <td>Quantity</td>
                    <td>@Model.Quantity</td>
                </tr>
                <tr>
                    <td>NameCate</td>
                    <td>@Model.NameCate</td>
                </tr>
                <tr>
                    <td>Language</td>
                    <td>@Model.Language</td>
                </tr>
                <tr>
                    <td>PublicationDate</td>
                    <td>@Model.PublicationDate</td>
                </tr>
                <tr>
                    <td>IllustrationsNote</td>
                    <td>@Model.IllustrationsNote</td>
                </tr>
                <tr>
                    <td>Isbn10</td>
                    <td>@Model.Isbn10</td>
                </tr>
                <tr>
                    <td>Isbn13</td>
                    <td>@Model.Isbn13</td>
                </tr>
                <tr>
                    <td>Created</td>
                    <td>@Model.Created</td>
                </tr>
                <tr>
                    <td>Status:</td>
                    <td>
                        @if (Model.Status.HasValue)
                        {
                            @if (Model.Status.Value)
                            {
                                <span class="text-success">Stocking</span>
                            }
                            else
                            {
                                <span class="text-danger">Out of stock</span>
                            }
                        }

                    </td>
                </tr>

                <tr>
                    <td>Images:</td>
                    <td>
                        <img width="200" height="200" src="~/images/tours/@Model.Image" alt="@Model.Title" />
                    </td>
                </tr>
               

            </tbody>
        </table>
    </div>
</div>
